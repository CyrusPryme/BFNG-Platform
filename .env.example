# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bfng"

# NextAuth
NEXTAUTH_SECRET="" # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"

# Paystack (Ghana payments)
PAYSTACK_SECRET_KEY="sk_test_xxx"
PAYSTACK_PUBLIC_KEY="pk_test_xxx"
PAYSTACK_WEBHOOK_SECRET="xxx"

# Email (Resend)
RESEND_API_KEY="re_xxx"
RESEND_FROM_EMAIL="BFNG <noreply@bfng.com.gh>"

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID="xxx"
AWS_SECRET_ACCESS_KEY="xxx"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="bfng-uploads"

# WhatsApp Business API (Optional)
WHATSAPP_PHONE_NUMBER_ID="xxx"
WHATSAPP_ACCESS_TOKEN="xxx"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Feature Flags
ENABLE_SUBSCRIPTIONS="true"
ENABLE_VENDOR_PORTAL="true"
ENABLE_BULK_BUYING="true"

# Operational Settings
ORDER_CUTOFF_DAY="3" # 0=Sunday, 3=Wednesday
ORDER_CUTOFF_HOUR="23" # 11 PM
BUYING_CYCLE_DAY="4" # Thursday
MIN_DELIVERY_FEE="15"
MAX_DELIVERY_FEE="50"

# Analytics (Optional)
SENTRY_DSN="https://xxx@sentry.io/xxx"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Development
NODE_ENV="development"
